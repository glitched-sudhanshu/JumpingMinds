<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.TMM" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_200</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bg_grey_layer</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/architects_daughter</item>
    </style>


    <style name="MyTilTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="boxStrokeErrorColor">@color/red_700</item>
        <item name="android:textColorHint">@color/offWhite</item>
        <item name="helperTextTextColor">@color/red_500</item>
        <item name="hintTextColor">@color/offWhite</item>
        <item name="boxStrokeColor">@color/til_box</item>
        <item name="errorTextColor">@color/red_700</item>
        <item name="counterTextColor">@color/offWhite</item>
        <item name="counterOverflowTextColor">@color/red_700</item>
    </style>

</resources>